{
  "name": "@prisma/templates",
  "version": "0.0.0-dripip",
  "repository": "git@github.com:prisma/templates-node.git",
  "author": "Prisma Data Inc.",
  "license": "MIT",
  "files": [
    "dist-cjs",
    "dist-esm"
  ],
  "exports": {
    ".": {
      "require": "./dist-cjs/index.js",
      "import": "./dist-esm/index.js"
    }
  },
  "main": "./dist-cjs/index.js",
  "module": "./dist-esm/index.js",
  "scripts": {
    "ts-node": "ts-node --project tsconfig.ts-node.json",
    "format": "yarn format:prettier && yarn format:imports",
    "format:prettier": "prettier --write .",
    "format:imports": "format-imports src && format-imports tests",
    "format:check": "yarn -s format:check:imports && yarn -s format:check:prettier",
    "format:check:imports": "format-imports --check src tests",
    "format:check:prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "dev": "yarn -s clean && ttsc --build --watch",
    "dev:gen": "nodemon  --watch generator --ext ts --exec 'yarn -s build:gen:generate-type-script'",
    "build": "yarn -s clean && yarn build:gen && yarn build:ts",
    "build:ts": "yarn build:ts:cjs && yarn build:ts:esm",
    "build:ts:cjs": "ttsc --project tsconfig.cjs.json",
    "build:ts:esm": "ttsc --project tsconfig.esm.json",
    "build:gen": "yarn -s build:gen:download-templates-repo && yarn -s build:gen:generate-type-script",
    "build:gen:download-templates-repo": "yarn -s ts-node generator/cli --download-templates-repo",
    "build:gen:generate-type-script": "yarn -s ts-node generator/cli --generate-type-script",
    "test": "yarn -s build:gen && jest",
    "clean": "rm -rf dist-cjs dist-esm node_modules/.cache templates-repo",
    "release:pr": "dripip pr",
    "release:canary": "dripip preview",
    "release:stable": "dripip stable",
    "prepublishOnly": "yarn -s build"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/plugin-transform-modules-commonjs": "7.14.5",
    "@babel/plugin-transform-typescript": "7.14.6",
    "@homer0/prettier-plugin-jsdoc": "4.0.1",
    "@prisma-labs/prettier-config": "0.1.0",
    "@types/jest": "26.0.24",
    "@types/lodash": "4.14.171",
    "@types/node": "16.4.7",
    "@types/ts-nameof": "4.2.1",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "arg": "5.0.0",
    "dripip": "0.10.0",
    "endent": "2.1.0",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-only-warn": "1.0.3",
    "execa": "5.1.1",
    "fast-glob": "3.2.7",
    "format-imports": "2.4.1",
    "fs-jetpack": "4.1.0",
    "jest": "27.0.6",
    "jest-watch-select-projects": "2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-typeahead": "0.6.4",
    "lodash": "4.17.21",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "ts-jest": "27.0.4",
    "ts-nameof": "5.0.0",
    "ts-node": "10.1.0",
    "ttypescript": "1.5.12",
    "typescript": "4.3.5",
    "typescript-snapshots-plugin": "1.7.0",
    "typescript-transform-paths": "3.1.0"
  },
  "importSorter": {
    "emptyLinesBetweenGroups": 0,
    "wrappingStyle": "prettier"
  },
  "resolutions": {
    "comment-parser": "1.1.5"
  }
}
